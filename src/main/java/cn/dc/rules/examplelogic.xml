	<when>
		<column type="User" name="user">
			<condition >  user.userId &lt;= 2 </condition>
			<condition andOr="OR" bracket="left">user.balance>0</condition>
			<condition andOr="OR" >user.age>0</condition>
			<condition andOr="AND" bracket="right">user.gender=="male"</condition>
			<condition andOr="OR" bracket="left">user.age<23</condition>
			<condition andOr="AND" bracket="left">user.balance>4</condition>
			<condition andOr="OR" bracket="right">user.gender=="female"</condition>
			<condition andOr="OR" bracket="right">user.age>50</condition>
		</column>
		<column type="Account" name="account">
			<condition>account.userId==userAccount.userId</condition>
		</column>
	</when>
	<then>
		account.setBalance(account.getBalance()+1);
		System.out.println(account.getBalance());
	</then>
</rule>
