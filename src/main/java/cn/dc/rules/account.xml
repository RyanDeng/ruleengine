<?xml version="1.0" encoding="UTF-8"?>
<package name="cn.dc">
<import name="cn.dc.use.User"/>
<import name="cn.dc.use.Account"/>
<rule name="account">
	<rule-attribute name="salience" value="10" />
	<when>
		<column type="User" name="userAccount">
			<condition>  userAccousnt.userId &lt;= 2 </condition>
			<condition>userAccount.balance>0</condition>
		</column>
		<column type="Account" name="account">
			<condition>account.userId==userAccount.userId</condition>
		</column>
	</when>
	<then>
		account.setBalance(account.getBalance()+1);
		System.out.println(account.getBalance());
	</then>
</rule>
<rule name="123">
	<rule-attribute name="salience" value="8" />
	<when>
		<column type="Account" name="ac">
			<condition>ac.balance>0</condition>
		</column>
	</when>
	<then>
		ac.setBalance(ac.getBalance());
		System.out.println(ac.getBalance());
	</then>
</rule>
</package>